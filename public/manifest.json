{
  "version": "0.0.1",
  "name": "copy-as-markdown",
  "manifest_version": 2,
  "description": "Copy as Markdown",
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "114": "img/icon-114.png"
  },
  "browser_action": {
    "default_title": "Copy as Markdown"
  },
  "background": {
    "scripts": [
      "/js/background_script.bundle.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "js": [
        "/js/content_script.bundle.js"
      ]
    }
  ],
  "commands": {
    "copy-as-markdown": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Copy as Markdown"
    }
  },
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "content_security_policy": "default-src 'self'; script-src 'self'; connect-src 'self'; style-src * 'unsafe-inline'; img-src 'self' data:;"
}
