{
  "version": "0.0.5",
  "name": "Copy as Markdown",
  "manifest_version": 3,
  "description": "Copy the selected HTML as Markdown",
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "114": "img/icon-114.png",
    "128": "img/icon-128.png"
  },
  "action": {
    "default_title": "Copy as Markdown"
  },
  "background": {
    "service_worker": "js/background_script.bundle.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["js/content_script.bundle.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "copy-as-markdown": {
      "suggested_key": {
        "default": "Alt+Shift+Y",
        "mac": "Alt+Shift+Y"
      },
      "description": "Copy as Markdown"
    }
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "clipboardWrite",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "homepage_url": "https://github.com/sjmyuan/copy-as-markdown"
}
